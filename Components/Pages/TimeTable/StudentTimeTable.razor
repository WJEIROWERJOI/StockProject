@page "/TimeTable/Time"

<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>시간</th>
            @foreach (var day in Enum.GetValues(typeof(DayOfWeek)).Cast<DayOfWeek>().Skip(1)) // 월~일
            {
                <th>@day</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < 48; i++) // 30분 간격
        {
            var timeSlot = TimeSpan.FromMinutes(i * 30); // 00:00 → 00:30 → 01:00...
            <tr>
                <td>@($"{timeSlot:hh\\:mm}")</td> <!-- 시간 표시 -->
                @foreach (var day in Enum.GetValues(typeof(DayOfWeek)).Cast<DayOfWeek>().Skip(1))
                {
                    <td></td> <!-- 빈칸 (여기에 일정 데이터 넣을 수 있음) -->
                }
            </tr>
        }
    </tbody>
</table>
